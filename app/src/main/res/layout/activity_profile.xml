<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/back_to_home"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/back_gray_circle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/title_profile"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/green3"/>
            </LinearLayout>

            <!--Photo profile-->

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:background="@color/gray"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="40dp"
                android:src="@drawable/photo_main"/>
            </androidx.cardview.widget.CardView>

            <!--Info my profile-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"

                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!--Name and age-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jesica"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=", "
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/user_profile_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!--Job-->
                <TextView
                    android:id="@+id/profile_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DiseÃ±adora"
                    android:textSize="18sp"/>

                <!--Location-->
                <TextView
                    android:id="@+id/profile_locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chapinero"
                    android:textColor="@color/green3"
                    android:textSize="18sp"/>

            </LinearLayout>
            <!--Divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:background="@color/gray1"/>

            <!--Description-->
            <TextView
                android:id="@+id/text_description_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="40dp"
                android:text="@string/profile_description"
                android:textSize="16sp"/>

            <!--Preferences-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@drawable/border_green_round">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/button_karaoke"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/button_tennis"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/button_extreme"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>