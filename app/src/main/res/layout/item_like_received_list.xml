<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardCornerRadius="30dp">
            <ImageView
                android:id="@+id/person_image_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_main"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/person_give_me_like"
            android:layout_width="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_height="25dp"
            android:fontFamily="@font/monserrat_semibold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/text2_like_received"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:fontFamily="@font/monserrat_semibold"
            android:textColor="@color/black"
            android:text="@string/your_received_likes"/>

        <TextView
            android:id="@+id/time_received_like"
            android:layout_width="50dp"
            android:layout_weight="0.5"
            android:layout_height="25dp"
            android:layout_gravity="center|end"
            android:fontFamily="@font/monserrat_medium"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:text="10min"/>

    </LinearLayout>

</LinearLayout>