<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/register2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Register.FragmentRegister2"
    android:background="@drawable/background_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_roush"/>

            <!--Form register-->
            <LinearLayout
                android:id="@+id/linearlayout_form1"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:background="@drawable/border_green_round"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <!--Title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/title_register2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/text_register2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>

                <!--Fields-->
                <!--Describe you-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border_white_transpatent_round">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/icon_message"
                        android:padding="8dp"/>
                    <EditText
                        android:id="@+id/describe_you_field"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingTop="12dp"
                        android:hint="Descríbete"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"
                        android:textColorHint="@color/white"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!--What are you looking for-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border_white_transpatent_round">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/icon_heart"
                        android:padding="8dp"/>

                    <EditText
                        android:id="@+id/looking_for_register"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="¿Que estoy buscando?"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"/>
                </LinearLayout>


                <!--Integrate accounts-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="------  Integrar mis cuentas  ------"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:id="@+id/icons_account"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/instagram"/>
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/tik_tok"/>


                </LinearLayout>


            </LinearLayout>

            <!--Buttons-->
            <LinearLayout
                android:id="@+id/linearlayout_button_form2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/back_r2_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_green_white"
                    android:text="@string/back_button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/next_r2_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/border_green_white_round"
                    android:text="@string/next_button"
                    android:textAllCaps="false"
                    android:textColor="@color/green4"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>