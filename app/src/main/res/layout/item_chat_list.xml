<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/chat_person_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_main"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1_like"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:text="user"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text2_like"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/monserrat_semibold"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/text_hour_like"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="end"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/monserrat_medium"
                android:text="10min"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_send_like"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="end"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/monserrat_medium"
                android:text="10min"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>