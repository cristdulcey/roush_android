<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NotificationSettings.NotificationSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageButton
                android:id="@+id/back_profile_notif"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginRight="-50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/back_circle_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_notifications"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/green3"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-50dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/profile_from_notifications"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/photo_main"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!--Divider deactivate-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/gray1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/deactivate_notifications"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <Switch
                android:id="@+id/switch_deactivate_not"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>

        </LinearLayout>

        <!--Divider message-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/gray1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/message_receive_ntf"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/notification_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="true"/>

        </LinearLayout>

        <!--Divider match-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/gray1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/match_done_ntf"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/notification_match"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="true"/>

        </LinearLayout>

        <!--Divider Like-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/gray1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/like_received_ntf"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/notification_likes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="true"/>

        </LinearLayout>

        <!--Divider cross-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/gray1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/cross_with_ntf"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/notification_cross"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="true"/>

        </LinearLayout>

        <!--Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/gray1"/>

    </LinearLayout>
</LinearLayout>