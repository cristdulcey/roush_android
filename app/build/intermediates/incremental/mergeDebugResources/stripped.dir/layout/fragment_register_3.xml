<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/register3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Register.FragmentRegister3"
    android:background="@drawable/background_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo_roush"/>

            <!--Form register-->
            <LinearLayout
                android:id="@+id/linearlayout_form1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_green_round"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <!--Title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/title_register3"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/text_register3"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>

                <!--Fields-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/photo_1_register"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="8dp"
                    android:padding="40dp"
                    android:background="@drawable/border_white_green_round"
                    android:src="@drawable/icon_camera" />

                <ImageButton
                    android:id="@+id/photo_2_register"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="8dp"
                    android:padding="40dp"
                    android:src="@drawable/icon_camera"
                    android:background="@drawable/border_white_green_round"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/photo_3_register"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="8dp"
                        android:padding="40dp"
                        android:background="@drawable/border_white_green_round"
                        android:src="@drawable/icon_camera"/>

                    <ImageButton
                        android:id="@+id/photo_4_register"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="8dp"
                        android:padding="40dp"
                        android:src="@drawable/icon_camera"
                        android:background="@drawable/border_white_green_round"/>


                </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/photo_5_register"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="8dp"
                        android:padding="40dp"
                        android:background="@drawable/border_white_green_round"
                        android:src="@drawable/icon_camera"/>

                    <ImageButton
                        android:id="@+id/photo_6_register"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="8dp"
                        android:padding="40dp"
                        android:src="@drawable/icon_camera"
                        android:background="@drawable/border_white_green_round"/>

                </LinearLayout>


            </LinearLayout>

            <!--Buttons-->
            <LinearLayout
                android:id="@+id/linearlayout_button_form3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/back_r3_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_green_white"
                    android:text="@string/back_button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/next_r3_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/border_green_white_round"
                    android:text="@string/next_button"
                    android:textAllCaps="false"
                    android:textColor="@color/green4"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>