<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wizard.Onboarding1"
    android:orientation="vertical"
    android:background="@drawable/background_color_app">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <ImageView
          android:id="@+id/onboarding_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="115dp"
          android:src="@drawable/image_onboarding2"/>

      <TextView
          android:id="@+id/title2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="60dp"
          android:text="@string/Title_onboarding2"
          android:textColor="@color/white"
          android:textSize="25sp"
          android:textStyle="bold"/>

      <TextView
          android:id="@+id/txt2"
          android:layout_width="270dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_gravity="center"
          android:text="@string/Txt_onboarding2"
          android:textColor="@color/white"
          android:textSize="18sp"/>

  </LinearLayout>

</LinearLayout>